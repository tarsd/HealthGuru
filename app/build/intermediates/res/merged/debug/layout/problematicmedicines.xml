<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp" >
    
    <TextView
        android:id="@+id/tventer_medicines"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingTop="40dp"
        android:layout_marginLeft="12dp"
        android:text="PROBLEMATIC MEDICINES"
        android:textSize="20sp" 
        android:textStyle="bold"
        />
    
   
        
        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:text="MEDICINE" 
        android:paddingTop="50dp"/>
        
        <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etmedicine"
        android:gravity="center"
        android:layout_marginLeft="25dp"
        android:paddingTop="10dp"
          />

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:text="PROBLEM/ALLERGY"
        android:paddingTop="50dp" />
        
        <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etproblem"
        android:gravity="center"
        android:layout_marginLeft="20dp"
        android:paddingTop="10dp"
        
         />
        <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:weightSum="100"
        android:paddingTop="40dp"
        android:orientation="horizontal">

          <Button
            android:id="@+id/b_submit_allergy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:layout_gravity="left"
            android:text="INSERT" />
        
          <Button
            android:id="@+id/b_delete_allergy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_weight="1"
            android:layout_marginLeft="40dp"
            android:layout_gravity="right"
            android:text="DELETE" />
     
        </LinearLayout> 

</LinearLayout>
